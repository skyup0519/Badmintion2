<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="phone_Animation.Dialog.BottomIn300" parent="@android:style/Animation.Dialog">
		<item name="android:windowEnterAnimation">@anim/dialog_i_btn_in_300</item>
		<item name="android:windowExitAnimation">@anim/dialog_i_btn_out_300</item>
	</style>
	<style name="phone_Animation.Dialog.Pop" parent="@android:style/Animation.Dialog">
		<item name="android:windowEnterAnimation">@anim/dialog_enter_normal</item>
		<item name="android:windowExitAnimation">@anim/dialog_exit</item>
	</style>

	<!-- Phone Dialog. -->
	 <style name="PhoneDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/phone_color_transparent_Bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    
    <style name="phone_DialogText">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">16dip</item>
        <item name="android:layout_marginLeft">10dip</item>
    	<item name="android:layout_marginRight">10dip</item>
    </style>

	<!--rigght-->
    <style name="phone_DialogText.Title">
    	<item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">18dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dip</item>
    	<item name="android:layout_marginRight">10dip</item>
    </style>

</resources>
